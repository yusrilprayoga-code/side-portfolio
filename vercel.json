{
    "version": 2,
    "functions": {
      "api/chat/**/*.ts": {
      "maxDuration": 30
    }
    },
    "routes": [
      {
        "src": "/api/chat",
        "dest": "/src/api/chat.ts"
      }
    ],
    "headers": [
      {
        "source": "/api/chat",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
          { "key": "Connection", "value": "keep-alive" },
          { "key": "Content-Encoding", "value": "none" }
        ]
      }
    ]
  }
  